
<div class="bg-gray-50 font-sans antialiased">
    <div class="min-h-screen flex flex-col items-center justify-center px-6 py-12">
        <!-- Title Section -->
        <h1 class="text-5xl font-extrabold text-gray-900 mb-8 text-center">
            <i class="fas fa-upload text-blue-600"></i> Upload Image
        </h1>

        <!-- Form Section -->
        <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-lg">
            <%= form_with(model: @image, local: true) do |form| %>
                
                <!-- Title Input -->
                <div class="mb-6">
                    <label for="image_title" class="block text-gray-700 font-semibold mb-2">
                        <i class="fas fa-heading text-gray-600"></i> Title
                    </label>
                    <%= form.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600" %>
                </div>

                <!-- File Input -->
                <div class="mb-6">
                    <label for="image_file" class="block text-gray-700 font-semibold mb-2">
                        <i class="fas fa-file-image text-gray-600"></i> Choose File
                    </label>
                    <%= form.file_field :file, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600" %>
                </div>

                <!-- Submit Button -->
                <div class="flex justify-center">
                  <%= form.submit  "Upload", class: "px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg shadow hover:bg-blue-700 transition flex items-center gap-2" do %>
                     <i class="fas fa-upload"></i> Upload
                <% end %>

                </div>

            <% end %>
        </div>
    </div>
</div>
